# ETH-sim environment configuration

# Server
SIM_HOST=127.0.0.1
SIM_PORT=8545

# Price Model
PRICE_MODEL=gbm
SEED=42  # Remove for non-deterministic randomness

# Initial Prices
INITIAL_ETH_PRICE=2000.0
INITIAL_USDC_PRICE=1.0

# GBM Parameters
GBM_DRIFT=0.0
GBM_VOLATILITY=0.8

# Jump Process Parameters
JUMP_INTENSITY=0.1
JUMP_MEAN=0.0
JUMP_STD=0.05

# Timing
TICK_INTERVAL_MS=1000

# Oracle (Chainlink-like)
ORACLE_HEARTBEAT=3600  # seconds
ORACLE_DEVIATION=0.005  # 0.5%

# Fault Injection
FAULT_DROP_PROB=0.0
FAULT_DUP_PROB=0.0
FAULT_REORDER_PROB=0.0
FAULT_REORDER_MAX=5

# Mempool
MEMPOOL_MIN_DELAY_MS=100
MEMPOOL_MAX_DELAY_MS=2000

# Reorgs
REORG_PROB=0.001
REORG_MAX_DEPTH=3

# Rate Limiting
RATE_LIMIT_RPS=100

# Tracing
TRACE_FILE=trace.json
REPLAY_MODE=false
